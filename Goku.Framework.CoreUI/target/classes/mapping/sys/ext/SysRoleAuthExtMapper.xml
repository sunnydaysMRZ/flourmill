<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.goku.coreui.sys.mapper.ext.SysRoleAuthExtMapper">
  <resultMap id="SysRoleAuthMap" type="com.goku.coreui.sys.model.SysRoleAuth">
    <id column="id" jdbcType="VARCHAR" property="id" />
    <result column="role_id" jdbcType="VARCHAR" property="roleId" />
    <result column="menu_id" jdbcType="VARCHAR" property="menuId" />
  </resultMap>
  <delete id="deleteRoleAuthByModuleId" parameterType="java.lang.String">
    delete from sys_role_auth
    where menu_id IN (
    SELECT id FROM sys_menu WHERE module_id = #{id,jdbcType=VARCHAR})
    and role_id=#{roleid,jdbcType=VARCHAR}
  </delete>
</mapper>